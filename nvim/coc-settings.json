{
  "coc.preferences.formatOnSaveFiletypes": [
    "elixir",
    "java",
    "javascript",
    "javascriptreact",
    "markdown",
    "typescript",
    "typescriptreact"
  ],
  "coc.preferences.rootPatterns": [
    ".git",
    "package.json"
  ],

  "codeLens.enable": true,

  "colors.filetypes": ["*"],

  "elixir.enable": true,
  "elixir.pathToElixirLS": "~/.dotfiles/elixir/ls/language_server.sh",
  "elixir.trace.server": "verbose",

  "eslint.autoFixOnSave": true,
  "eslint.enable": true,
  "eslint.options": {
    "cache": true
  },
  "eslint.run": "onSave"
}
